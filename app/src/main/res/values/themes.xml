<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieHuB" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/primary_color</item>
        <item name="backgroundColor">@color/white</item>
        <item name="textFillColor">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

         <style name="BaseTextStyle">
            <item name="android:textColor">@color/white</item>
        </style>

        <style name="LargeText" parent="BaseTextStyle">
            <item name="android:textSize">@dimen/_50sdp</item>
            <item name="android:textStyle">bold</item>
        </style>

        <style name="HeadingText" parent="BaseTextStyle">
            <item name="android:textSize">@dimen/_25sdp</item>
            <item name="android:textStyle">bold</item>
        </style>

        <style name="MediumText" parent="BaseTextStyle">
            <item name="android:textSize">@dimen/_22sdp</item>
            <item name="android:textStyle">bold</item>
            <item name="android:textColor">@color/white</item>
        </style>

        <style name="NormalText" parent="BaseTextStyle">
            <item name="android:textSize">@dimen/_20sdp</item>
        </style>
    <style name="SmallText" parent="BaseTextStyle">
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>
    <style name="Text18" parent="BaseTextStyle">
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:textStyle">bold</item>
    </style>
     <style name="Text14" >
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/grey</item>
    </style>
    <style name="Text14_White" >
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="button_style" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/button_design</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">@color/white</item>
</style>
    <style name="ScoreText" >
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/yellow</item>
    </style>
    <style name="QuizText">
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>